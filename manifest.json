{
    "manifest_version": 3,
    "name": "Chess Bot",
    "description": "Cette extension fait quelque chose",
    "version": "1.0",
    "icons": {
        "16": "./assets/logo/16x16.png",
        "48": "./assets/logo/48x48.png",
        "128": "./assets/logo/128x128.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "16": "./assets/logo/16x16.png",
          "48": "./assets/logo/48x48.png",
          "128": "./assets/logo/128x128.png"
      }
   },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["popup.js"],
      "css": ["styles.css"]
    }],
    "permissions": [
      "activeTab"
    ]
}
  